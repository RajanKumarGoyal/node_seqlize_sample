<section>
    <h2>Users List</h2>

    {{#if message}}
        <div class="alert {{messageClass}}" role="alert">
            {{message}}
        </div>
    {{/if}}

    <table class="table table-bordered" id="mytable">
        <thead>
            <tr>
                <th>Sr No.</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Action(s)</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{ id }}</td>
                <td>{{ firstName }}</td>
                <td>{{ lastName }}</td>
                <td>{{ email }}</td>
                <td>
                    <a href="/users/{{id}}/view" class="btn btn-info">View</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</section>